{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "typography": {
      "fluid": true,
      "lineHeight": true,
      "fontFamilies": [
        {
          "name": "Inter",
          "slug": "inter",
          "fontFamily": "Inter, sans-serif",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/Inter-Regular.ttf"]
            },
            {
              "fontFamily": "Inter",
              "fontStyle": "bold",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/Inter-Bold.ttf"]
            }
          ]
        }
      ]
    },
    "color": {
      "palette": [
        {
          "name": "KCLS Voice Green",
          "slug": "kcls-voice-green",
          "color": "#009e57"
        },
        {
          "name": "KCLS Voice Blue",
          "slug": "kcls-voice-blue",
          "color": "#124a92"
        },
        {
          "name": "KCLS Voice White",
          "slug": "kcls-voice-white",
          "color": "#f5f5f5"
        },
        {
          "name": "KCLS Voice Black",
          "slug": "kcls-voice-black",
          "color": "#071420"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",

      "lineHeight": "1.5"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "h2": {
        "color": {
          "text": "var(--wp--preset--color--kcls-voice-blue)"
        }
      },
      "h3": {
        "color": {
          "text": "var(--wp--preset--color--kcls-voice-white)"
        },
        "typography": {
          "fontSize": "clamp(1rem, 1.5rem, 3rem)"
        }
      }
    },
    "blocks": {
      "core/cover": {
        "elements": {
          "h1": {
            "color": {
              "text": "var(--wp--preset--color--kcls-voice-white)"
            },
            "typography": {
              "fontSize": "clamp(5rem, 7rem, 10rem)"
            },
            "spacing": {
              "margin": {
                "top": "0",
                "bottom": "0"
              }
            }
          },
          "h2": {
            "color": {
              "text": "var(--wp--preset--color--kcls-voice-white)"
            },
            "spacing": {
              "margin": {
                "top": "0",
                "bottom": "2rem"
              }
            }
          },
          "button": {
            "border": {
              "radius": "10px"
            },
            "typography": {
              "fontSize": "2rem"
            },
            "spacing": {
              "padding": {
                "top": "1.5rem",
                "right": "1.5rem",
                "bottom": "1.5rem",
                "left": "1.5rem"
              }
            }
          }
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--kcls-voice-blue)"
        }
      },
      "core/paragraph": {
        "color": {
          "text": "var(--wp--preset--color--kcls-voice-black)"
        },
        "typography": {
          "lineHeight": "1.5"
        }
      },
      "core/button": {
        "color": {
          "text": "var(--wp--preset--color--kcls-voice-white)",
          "background": "var(--wp--preset--color--kcls-voice-green)"
        },
        "typography": {
          "fontWeight": "bold"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--kcls-voice-white)"
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "title": "Header",
      "area": "header",
      "name": "header"
    },
    {
      "title": "Footer",
      "area": "footer",
      "name": "footer"
    },
    {
      "title": "Local 1857 - Hero",
      "name": "hero",
      "area": "uncategorized"
    },
    {
      "title": "Local 1857 - Action Bar",
      "name": "action-bar",
      "area": "uncategorized"
    }
  ]
}
